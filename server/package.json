{
  "name": "tms-server",
  "version": "1.0.0",
  "description": "Backend for the TMS application with secure transportation management",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon --config nodemon.json server.js",
    "build": "echo \"No build step required for server.\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",    
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo:all",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t tms-server .",
    "docker:run": "docker run -p 3000:3000 tms-server"
  },
  "keywords": [
    "tms",
    "transportation",
    "logistics",
    "backend",
    "api"
  ],
  "author": "Krzysztof Stolarski",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "bwip-js": "^4.7.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.17.2",
    "sequelize": "^6.37.3",
    "pg": "^8.16.3",
    "validator": "^13.15.15",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.2"
  }
}
